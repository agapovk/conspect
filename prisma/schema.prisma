// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String     @id @unique @default(cuid())
  email       String     @unique
  firstName   String?
  lastName    String?
  imageUrl    String?
  clerkUserId String     @unique
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  Scheme      Scheme[]
  Drill       Drill[]
  Conspect    Conspect[]
}

model Scheme {
  id     String  @id @unique @default(cuid())
  name   String
  url    String
  size   Int
  key    String?
  user   User    @relation(fields: [userId], references: [id])
  userId String
  Drill  Drill[]
}

model Drill {
  id          String     @id @unique @default(cuid())
  name        String
  description String?
  scheme      Scheme?    @relation(fields: [schemeId], references: [id])
  user        User       @relation(fields: [userId], references: [id])
  schemeId    String?
  userId      String
  Conspect    Conspect[]
}

model Conspect {
  id       String    @id @unique @default(cuid())
  datetime DateTime?
  drills   Drill[]
  user     User      @relation(fields: [userId], references: [id])
  userId   String
}
